<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/darkblue"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/white"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/inset_underline_text"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Please enter your student- and exam identifier and then press the "Load exam" button to start the exam.\n'
        android:textColor="@color/white"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Good Luck!'
        android:textColor="@color/white"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Load Exam  "
        android:id="@+id/button"
        android:background="@drawable/load_exam"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:minHeight="40dp"
        android:minWidth="60dp"
        android:textSize="20dp"
        android:maxLength="10"
        android:singleLine="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/inset_start_screen_inputs"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:minHeight="40dp"
        android:minWidth="60dp"
        android:textSize="20dp"
        android:maxLength="10"
        android:singleLine="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/inset_start_screen_inputs"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam identifier"
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Student identifier"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="35dp"
        />




</RelativeLayout>